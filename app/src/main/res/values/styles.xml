<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--可响应手机的暗黑模式-->
    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!--Appbar背景色 -->
        <!--应用程序的主品牌颜色。默认情况下，这是应用到操作栏背景-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <!--主品牌颜色的深色变体。默认情况下，这是应用到的颜色状态栏(通过statusBarColor)和导航栏(通过navigationBarColor)。-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控制各个控件被选中时的颜色,默认的光标等-->
        <!--明亮的色彩与品牌主色调相得益彰。默认情况下，这是应用的颜色到框架控件(通过colorControlActivated)。-->
        <item name="colorAccent">@color/colorAccent</item>

        <!--window背景-->
        <item name="android:windowBackground">@color/bgColorPrimary</item>

    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <!--手机状态栏为亮,字体为黑色的-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <!--
        指定应用在凹形屏幕的显示模式
        // 默认情况，全屏页面不可用刘海区域，非全屏页面可以进行使用
public static final int LAYOUT_IN_DISPLAY_CUTOUT_MODE_DEFAULT = 0;
// 允许页面延伸到刘海区域
public static final int LAYOUT_IN_DISPLAY_CUTOUT_MODE_SHORT_EDGES = 1;
// 不允许使用刘海区域
public static final int LAYOUT_IN_DISPLAY_CUTOUT_MODE_NEVER = 2;
        -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
    </style>

</resources>
